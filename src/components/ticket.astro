---
import IconGithub from "../assets/icon-github.svg";
import LogoMark from "../assets/logo-mark.svg";
---

<div class="ticket-wrapper">
  <img src="/pattern-ticket.svg" alt="" />
  <div class="ticket">
    <header class="ticket__header">
      <LogoMark class="logo" />
      <div class="event">
        <h2 class="event__name">Coding Conf</h2>
        <span class="event__details">Jan 31, 2025 / Austin, TX</span>
      </div>
    </header>
    <main class="person">
      <img class="avatar" src="/image-avatar.jpg" alt="name" />
      <div>
        <span class="person__name">Jonatan Kristof</span>
        <div class="github">
          <IconGithub class="github__icon" />
          <span class="github__user">@jonatankristof0101</span>
        </div>
      </div>
    </main>
    <aside class="ticket-number"><span>#01609</span></aside>
  </div>
</div>

<style>
  .ticket-wrapper {
    display: grid;
    grid-template-areas: "stack";
    max-width: fit-content;

    & > * {
      grid-area: stack;
    }
  }

  .ticket {
    display: grid;
    align-content: space-between;
    grid-template-areas:
      "header aside"
      "main aside";
    padding: 1rem;

    @media (width >= 48rem) {
      padding: 2rem 1.5rem;
    }
  }

  .logo {
    width: auto;

    @media (width < 48rem) {
      height: 30px;
    }
  }

  .ticket__header,
  .person {
    display: flex;
    gap: 0.75rem;

    @media (width >= 48rem) {
      gap: 1.25rem;
    }
  }

  .ticket__header {
    grid-area: header;
  }

  .event__name {
    font-size: 22px;
    font-weight: var(--fw-3);
    line-height: 0.8;
    margin-block-end: 1rem;

    @media (width >= 48rem) {
      font-size: 38px;
      margin-block-end: 1.5rem;
    }
  }

  .event__details {
    font-size: 14px;
    font-weight: var(--fw-1);
    color: hsl(var(--clr-neutral-300));

    @media (width >= 48rem) {
      font-size: 19px;
    }
  }

  .person {
    grid-area: main;
    align-items: center;
  }

  .avatar {
    height: 45px;
    aspect-ratio: 1;
    border-radius: 0.25rem;

    @media (width >= 48rem) {
      height: 80px;
      border-radius: 0.75rem;
    }
  }

  .person__name {
    font-size: var(--fs-base);
    font-weight: var(--fw-2);
    line-height: var(--lh-2);
    margin-block-end: 0.25rem;

    @media (width >= 48rem) {
      font-size: 2rem;
      margin-block-end: 0.5rem;
    }
  }

  .github {
    display: flex;
    gap: 0.25rem;
    align-items: center;
  }

  .github__icon {
    width: auto;

    @media (width < 48rem) {
      height: 1.125rem;
    }
  }

  .github__user {
    font-size: 0.875rem;
    color: hsl(var(--clr-neutral-300));

    @media (width >= 48rem) {
      font-size: 1.25rem;
    }
  }

  .ticket-number {
    grid-area: aside;
    display: grid;
    justify-items: center;
    justify-content: start;
    color: hsl(var(--clr-neutral-300));
    font-size: var(--fs-base);

    span {
      transform: rotateZ(90deg);
    }

    @media (width >= 48rem) {
      font-size: 30px;
    }
  }
</style>
